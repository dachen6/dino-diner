@page
@model Website.Pages.MenuModel
@{
    ViewData["Title"] = "Menu";
}

<h1>Menu</h1>

<h2>Combos</h2>
<h3>
    Drink is Water
</h3>
<h3>
    Side is Cane Sugar
    Potato
    Salt
    Vegetable Oil
</h3>
<div class="content">
    <div class="menu-item">
        @for (int i = 0; i < Model.Menu.AvailableCombos.Count; i++)
        {
            <div class="row">

                @if (Model.AvailableMenuItems.Contains(Model.Menu.AvailableCombos[i]))
                {
                <p>@Model.Menu.AvailableMenuItems[i].ToString():</p>
                <ul>
                    
                    <li>
                        Calories: @Model.Menu.AvailableCombos[i].Calories;
                    </li>

                    <li>
                        Price:   @Model.Menu.AvailableCombos[i].Price;
                    </li>

                    <ul>
                        @for (int j = 0; j < Model.Menu.AvailableCombos[i].Ingredients.Count; j++)
                        {
                            <li>@Model.Menu.AvailableCombos[i].Ingredients[j].ToString()  </li>
                            
                        }
                    </ul>
                </ul>
                }
            </div>
        }

        <h2>Entrees</h2>


        @for (int i = 0; i < Model.Menu.AvailableEntrees.Count; i++)
        {
        <div class="row">
            @if (Model.AvailableMenuItems.Contains(Model.Menu.AvailableEntrees[i]))
            {
                <ul>
                    <li>
                        @Model.Menu.AvailableEntrees[i].ToString();

                    </li>
                    <li>
                        Calories:   @Model.Menu.AvailableEntrees[i].Calories;
                    </li>
                    <li>
                        Price:    @Model.Menu.AvailableEntrees[i].Price;
                    </li>

                    <ul>
                        @for (int j = 0; j < Model.Menu.AvailableEntrees[i].Ingredients.Count; j++)
                        {
                            <li>@Model.Menu.AvailableEntrees[i].Ingredients[j].ToString()  </li>
                            

                        }
                    </ul>

                </ul>
            }
            </div>
        }


        <h2>Sides</h2>

        @for (int i = 0; i < Model.Menu.AvailableSides.Count; i++)
        {
    <div class="row">
        @if (Model.AvailableMenuItems.Contains(Model.Menu.AvailableSides[i]))
        {
            <ul>
                <li>
                    @Model.Menu.AvailableSides[i].ToString();

                </li>
                <li>
                    Calories:   @Model.Menu.AvailableSides[i].Calories;
                </li>
                <li>
                    Price:     @Model.Menu.AvailableSides[i].Price;
                </li>
                <ul>
                    @for (int j = 0; j < Model.Menu.AvailableSides[i].Ingredients.Count; j++)
                    {
                        <li>@Model.Menu.AvailableSides[i].Ingredients[j].ToString()  </li>
                        
                    }
                </ul>
            </ul>
        }
        </div>

        }

        <h2>Drinks</h2>

        @for (int i = 0; i < Model.Menu.AvailableDrinks.Count; i++)
        {
    <div class="row">
        @if (Model.AvailableMenuItems.Contains(Model.Menu.AvailableDrinks[i]))
        {
            <ul>
                <li>
                    @Model.Menu.AvailableDrinks[i].ToString();

                </li>
                <li>
                    Calories:  @Model.Menu.AvailableDrinks[i].Calories;
                </li>
                <li>
                    Price:     @Model.Menu.AvailableDrinks[i].Price;
                </li>
                <ul>
                    @for (int j = 0; j < Model.Menu.AvailableDrinks[i].Ingredients.Count; j++)
                    {

                        <li>@Model.Menu.AvailableDrinks[i].Ingredients[j].ToString()  </li>
                        
                    }
                </ul>
            </ul>
        }
        </div>
        }

    </div>


    <form method="post">
        <h4>Search</h4>
        <input type="text" name="search" id="search" />
        <input type="submit" value="Search"/>
        <input type="submit" name="filter" id="filter" value="Apply Filter(s)" />
        <h4>menu Category</h4>
        <div class="checkbox-list">
            <label>
                <input type="checkbox" name="menuCategory" value="Combo" id="filters" />
                Combo
            </label>

            <label>
                <input type="checkbox" name="menuCategory" value="Entree" id="filters" />
                Entree
            </label>

            <label>
                <input type="checkbox" name="menuCategory" value="Side" id="filters" />
                Side
            </label>

            <label>
                <input type="checkbox" name="menuCategory" value="Drink" id="filters" />
                Drink
            </label>

            <h4>Price</h4>

            <label>
                minimum :
                <input type="number" id="minimum-price" min="0" max="10" step="0.1" name="minIMDB" />
            </label>

            <label>
                maximum :
                <input type="number" id="maximum-price" min="0" max="10" step="0.1" name="maxIMDB" />
            </label>

            <h4>Excluding Ingredients</h4>
            @for (int i = 0; i < Model.PossibleIngredient.Count; i++)
            {
                <label>
                    <input type="checkbox" name="IngredientFilter" value="@Model.PossibleIngredient[i].ToString()" id="filters" />
                    @Model.PossibleIngredient[i]
                </label>
            }




        </div>
    </form>

</div>