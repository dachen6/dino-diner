<Window x:Class="PointOfSale.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PointOfSale"
        xmlns:menu="clr-namespace:DinoDiner.Menu;assembly=Menu" 
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.DataContext>
        <menu:Order/>
    </Window.DataContext>
    <DockPanel>
        <local:OrderList
            x:Name="OrderControl"
            DockPanel.Dock="Right" Width="200"  Background="LightSteelBlue" >
            
        </local:OrderList>
        <Grid DockPanel.Dock="Bottom">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition/>
                
            </Grid.ColumnDefinitions>
       
        <Button Click="OnReturnToCategorySelection" Grid.ColumnSpan="1">Return to category Selection</Button>
        </Grid>
        <Frame Name="OrderUI" LoadCompleted="OnLoadCompleted" DataContextChanged="OnDataContextChange"  Source="MenuCategorySelection.xaml">
            
        </Frame>
    </DockPanel>
</Window>
